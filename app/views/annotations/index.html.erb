<p id="notice"><%= notice %></p>

<h1>Annotations</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Times</th>
      <th>User</th>
      <th>Tutorial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annotations.each do |annotation| %>
      <tr>
        <td><%= annotation.comment %></td>
        <td><%= annotation.times %></td>
        <td><%= annotation.user %></td>
        <td><%= annotation.tutorial %></td>
        <td><%= link_to 'Show', annotation %></td>
        <td><%= link_to 'Edit', edit_annotation_path(annotation) %></td>
        <td><%= link_to 'Destroy', annotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Annotation', new_annotation_path %>
