
<div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">	
          <div class="card mb-3">
            <div class="card-body">
              <%= bootstrap_form_for(:career, url: careers_path, local: true) do |form| %>

              
                <div class="form-group col-md-3">
                  <%= form.text_field :code, :required => true, :label=>"Código de la carrera" %>
                </div>

                <div class="form-group col-md-3">
                  <%= form.text_field :name,:label=>"Nombre",:required => true,:onkeypress=>"return isWord(event)"%>
                </div>

                <div class="form-group col-md-3">
                  <%= form.select(:department_id, options_from_collection_for_select(Department.all, :id, :name ),:label=>"Departamento Académico o Escuela",:required => true) %>
                </div>

                <input class="btn btn-primary" name="commit" type="submit" value="Guardar">

              <% end %>
            </div>
          </div>  
        </div>
</div> 


